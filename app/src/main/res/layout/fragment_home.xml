                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:text="Rs. 100"
                                android:textColor="#000"
                                android:textSize="12dp" />

                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

