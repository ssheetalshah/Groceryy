            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_weight="0.35"
            android:background="@drawable/xml_textbox_bg"
            android:drawableLeft="@drawable/ic_search"
            android:editable="false">

        </EditText>

    </LinearLayout>




        <LinearLayout
